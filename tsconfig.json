{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "build",
    "lib": ["dom", "es2020", "dom.iterable"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "baseUrl": ".",
    "jsx": "react",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "src/assets/**/*"
  ]
}
