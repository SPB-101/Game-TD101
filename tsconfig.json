{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "build",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "baseUrl": ".",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["client/src/**/*", "server/**/*"],
  "exclude": ["node_modules", "public", "dist", "client/src/assets/**/*"],
  "files": [
    "./client/src/types.d.ts"
  ]
}
