{
  "include": ["./server/index.ts"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "inlineSources": true,
    "resolveJsonModule": true,
    "paths": {
      "@resolvers/*": ["client/app/resolvers/*"],
      "@entities/*": ["client/app/entities/*"],
      "@component/*": ["client/src/component/*"],
      "@constants/*": ["client/src/constants/*"],
      "@actions/*": ["client/src/store/actions/*"],
      "@selectors/*": ["client/src/store/selectors/*"],
      "@reducers/*": ["client/src/store/reducers/*"],
      "@thunks/*": ["client/src/store/thunks/*"],
      "@assets/*": ["client/src/assets/*"],
      "@utils/*": ["client/src/utils/*"],
      "@utils-entity/*": ["client/app/utils/*"]
    }
  }
}
